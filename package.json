{
  "name": "webpack-babel-typescript-jest",
  "version": "1.0.0",
  "description": "Template for Webpack/Babel for typescript project and use of Jest for testing.",
  "license": "MIT",
  "author": {
    "name": "Thomas Carman"
  },
  "scripts": {
    "build": "yarn clean && yarn build:js && yarn build:webpack && yarn build:types",
    "build:js": "babel src --out-dir dist --extensions '.ts,.tsx'",
    "build:webpack": "webpack --mode=production",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "clean": "rimraf dist",
    "dev": "webpack serve --mode=development"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "babel-loader": "^8.2.2",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  }
}
